<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="quiz" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SizeText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SizeTextHeader">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SizeTextHeader.Red">
        <item name="android:textColor">#DB1515</item>
    </style>


</resources>
